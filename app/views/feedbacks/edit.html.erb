<h1>Edit Feedback</h1>

<%= form_with model: @feedback, local: true do |f| %>
  <p>
    <%= f.label :comments_for_snack %><br>
    <%= f.text_area :comments_for_snack %>
  </p>

  <p>
    <%= f.label :comments_for_dinner %><br>
    <%= f.text_area :comments_for_dinner %>
  </p>

  <p>
    <%= f.label :rating_for_snack, "Snack Rating (1-5)" %><br>
    <%= f.number_field :rating_for_snack, min: 1, max: 5, step: 0.1 %>
  </p>

  <p>
    <%= f.label :rating_for_dinner, "Dinner Rating (1-5)" %><br>
    <%= f.number_field :rating_for_dinner, min: 1, max: 5, step: 0.1 %>
  </p>

  <p>
    <%= f.submit "Update Feedback" %>
  </p>
<% end %>

<%= link_to "Back to Feedbacks", feedbacks_path %>
